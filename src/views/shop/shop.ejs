<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Tienda | FunkoShop</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/shop.css">
</head>
<body>
    <main class="body-shop container">
        <aside class="barra-lateral">
            <form class="barra-lateral-shop">
                <label for="buscador">BUSCAR
                    <input type="search" id="buscador" placeholder="ítem o categoría">
                </label>
                <label for="ordenar-por">ORDENAR POR
                    <select name="ordenar-por" id="ordenar-por">
                        <option value="">Mayor a menor</option>
                        <option value="">CATEGORIA</option>
                        <option value="">PRECIO</option>
                    </select>
                </label>
                <div>
                    <label for="precio">PRECIO
                        <div class="precio_filtro">
                            MIN<input type="text" id="precio" placeholder="0" min="0">
                            - MAX<input type="text" id="precio" placeholder="0">
                        </div>
                    </label>
                </div>

                <legend>FILTRAR</legend>

                <div class="barra-lateral-filtro">
                    <div class="filtro__check">
                        <input type="checkbox" id="filtro" value="ofertas">
                        <label for="edicionEspecial">OFERTAS</label>
                    </div>
                    
                    <div class="filtro__check">
                        <input type="checkbox" id="filtro" value="edicion-especial">
                        <label for="edicionEspecial">EDICION ESPECIAL</label>
                    </div>
                    
                    <div class="filtro__check">
                        <input type="checkbox" id="filtro" value="favoritos">
                        <label for="favoritos">FAVORITOS</label>
                    </div>
                    
                    <div class="filtro__check">
                        <input type="checkbox" id="filtro" value="nuevos">
                        <label for="ofertas">NUEVOS</label>
                    </div>
                </div>
            </form> 
        </aside>

        <section class="body-shop-items">
            <ul class="shop__items">
                <% data.forEach( item => { %>
                    <li class="shop__item">
                        <article class="card-item">
                            <a class="card-item__link" href="/shop/item/<%= item.product_id%>">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="<%= item.img_front %>" alt="Figura coleccionable Funko de un Stormtropper">
                                    <img class="card-item__img--back" src="<%= item.img_back %>" alt="Figura coleccionable Funko de un Stormtropper en caja">        
                                </picture>
                                <div class="card-item__content">    
                                    <p class="card-item__license"><%= item.category_name %></p>
                                    <h4 class="card-item__name"><%= item.product_name %></h4>
                                    <p class="card-item__price">$ <%= item.product_price %>.-</p>
                                    <p class="card-item__promo"><%= item.dues %> CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>

    <section class="paginacion">
        <ul>
            <li><a href="#" class="active"><</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">...</a></li>
            <li><a href="#">9</a></li>
            <li><a href="#">10</a></li>
            <li><a href="#">></a></li>
        </ul>
    </section>
    
    <%- include('../partials/footer') %>
    
</body>
</html>